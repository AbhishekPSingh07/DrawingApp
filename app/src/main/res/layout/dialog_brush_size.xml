<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ib_very_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="very small"
        android:src="@drawable/verysmall"
        app:layout_constraintBottom_toTopOf="@id/ib_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="small"
        android:src="@drawable/small"
        app:layout_constraintBottom_toTopOf="@id/ib_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_very_small" />

    <ImageButton
        android:id="@+id/ib_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="medium"
        android:src="@drawable/medium"
        app:layout_constraintBottom_toTopOf="@id/ib_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_small" />

    <ImageButton
        android:id="@+id/ib_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Large"
        android:src="@drawable/large"
        app:layout_constraintBottom_toTopOf="@id/ib_very_Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_medium" />

    <ImageButton
        android:id="@+id/ib_very_Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="very Large"
        android:src="@drawable/verylarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_large" />

</androidx.constraintlayout.widget.ConstraintLayout>